<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<ViewSettingsDialog id="idCustomersSettings" confirm="handleConfirm">
		<sortItems>
			<ViewSettingsItem text="{i18n>LastName}" key="lastName" selected="true"/>
			<ViewSettingsItem text="{i18n>FirstName}" key="firstName"/>
			<ViewSettingsItem text="{i18n>CustomerID} (ID)" key="id"/>
		</sortItems>
		<filterItems>
			<ViewSettingsFilterItem text="{i18n>Type}" key="type">
				<items>
					<ViewSettingsItem text="{i18n>PrivatePerson}" key="{i18n>PrivatePerson}"/>
					<ViewSettingsItem text="{i18n>Company}" key="{i18n>Company}"/>
					<ViewSettingsItem text="{i18n>Contractor}" key="{i18n>Contractor}"/>
				</items>
			</ViewSettingsFilterItem>
		</filterItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>