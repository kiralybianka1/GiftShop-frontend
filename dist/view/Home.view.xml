<mvc:View controllerName="Project.Project.controller.Home" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
	<Page title="{i18n>Home}">
		<l:BlockLayout>
			<l:BlockLayoutRow>
				<l:BlockLayoutCell id="L1C1" class="sapUiNoContentPadding">
					<l:content>
						<Image id="img1" src="images/gift.jpg" tooltip="{i18n>HomeImageTooltip}" width="100%" height="100%"/>
					</l:content>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
			<l:BlockLayoutRow>
				<l:BlockLayoutCell id="L2C1" backgroundColorSet="ColorSet11" backgroundColorShade="ShadeD">
					<l:VerticalLayout>
						<core:Icon src="sap-icon://product" size="2.5rem" color="Default" tooltip="role"/>
						<Title text="{i18n>Products}" level="H3" titleStyle="H2"/>
						<Text text="{i18n>ProductsHomeText}"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell id="L2C2" backgroundColorSet="ColorSet11" backgroundColorShade="ShadeB">
					<l:VerticalLayout>
						<core:Icon src="sap-icon://customer" size="2.5rem" color="Default" tooltip="add-product"/>
						<Title text="{i18n>Customers}" level="H3" titleStyle="H2"/>
						<Text text="{i18n>CustomersHomeText}"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell id="L2C3" backgroundColorSet="ColorSet11" backgroundColorShade="ShadeD">
					<l:VerticalLayout>
						<core:Icon src="sap-icon://customer-and-supplier" size="2.5rem" color="Default" tooltip="customer-financial-fact-sheet"/>
						<Title text="{i18n>Sellers}" level="H3" titleStyle="H2"/>
						<Text text="{i18n>SellersHomeText}"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
			<l:BlockLayoutRow>
				<l:BlockLayoutCell id="L3C1" backgroundColorSet="ColorSet11" backgroundColorShade="ShadeB">
					<l:VerticalLayout>
						<core:Icon src="sap-icon://crm-sales" size="2.5rem" color="Default" tooltip="role"/>
						<Title text="{i18n>Orders}" level="H3" titleStyle="H2"/>
						<Text text="{i18n>OrdersHomeText}"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell id="L3C2" backgroundColorSet="ColorSet11" backgroundColorShade="ShadeD">
					<l:VerticalLayout>
						<core:Icon src="sap-icon://customer-financial-fact-sheet" size="2.5rem" color="Default" tooltip="add-product"/>
						<Title text="{i18n>Acquisitions}" level="H3" titleStyle="H2"/>
						<Text text="{i18n>AcsHomeText}"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell id="L3C3" backgroundColorSet="ColorSet11" backgroundColorShade="ShadeB">
					<l:VerticalLayout>
						<core:Icon src="sap-icon://lead" size="2.5rem" color="Default" tooltip="customer-financial-fact-sheet"/>
						<Title text="{i18n>Bills}" level="H3" titleStyle="H2"/>
						<Text text="{i18n>BillsHomeText}"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
		</l:BlockLayout>
	</Page>
</mvc:View>